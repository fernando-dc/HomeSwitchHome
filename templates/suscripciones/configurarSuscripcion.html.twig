{% extends 'base.html.twig' %}

{% block title %}Configurar Precio{% endblock %}

{% block bodyTitle %}
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
    {% if is_granted('ROLE_ADMIN') %}
    <h1>Configurar precio suscripcion <strong class="text-success">{{ suscripcion.getNombre() }}</strong></h1>
    {% else  %}
        <h1>Tu usuario no tiene acceso a esta pagina.</h1>
    {% endif %}
    {% endif %}
{% endblock %}


{% block body %}
{% if is_granted('IS_AUTHENTICATED_FULLY') %}
{% if is_granted('ROLE_ADMIN') %}

    {% form_theme form 'bootstrap_4_layout.html.twig' %}

    <div class="container" align="center" style="width:25%">

        {{ form_start(form)}}
        {{ form_widget(form)}}
        {{ form_end(form)}}
        <br>
        <a href="{{ path('residencias_index') }}" class="btn btn-secondary">Cancelar</a>
            
    </div>
{% endif %}
{% else %}
    <div align="center" class="container">
        </br></br> </br></br></br>
        <p>No ha iniciado sesión</p>
        <a href="/inicio" class="btn btn-info">Iniciar sesión</a>
    </div>
{% endif %}
{% endblock %}