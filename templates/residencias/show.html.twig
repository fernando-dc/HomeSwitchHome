{% extends 'base.html.twig' %}

{% block title %}Residencias{% endblock %}

{% block body %}
    <h1>Residencias</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>IdResidencia</th>
                <td>{{ residencia.idResidencia }}</td>
            </tr>
            <tr>
                <th>Tipo</th>
                <td>{{ residencia.tipo }}</td>
            </tr>
            <tr>
                <th>Habitaciones</th>
                <td>{{ residencia.habitaciones }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ residencia.descripcion }}</td>
            </tr>
            <tr>
                <th>Calle</th>
                <td>{{ residencia.calle }}</td>
            </tr>
            <tr>
                <th>Ciudad</th>
                <td>{{ residencia.ciudad }}</td>
            </tr>
            <tr>
                <th>Provincia</th>
                <td>{{ residencia.provincia}}</td>
           </tr>
           {% if residencia.depto != null %}
              <tr>
                  <th>Depto</th>
                  <td>{{ residencia.depto }}</td>
              </tr>
            {% endif %}
            {% if residencia.piso != null %}
            <tr>
                <th>Piso</th>
                <td>{{ residencia.piso }}</td>
            </tr>
          {% endif %}
          <tr>
                <th>Codigo Postal</th>
                <td>{{ residencia.codigoPostal}}</td>
           </tr>

            
            </tr>
        </tbody>
    </table>

    <a href="{{ path('residencias_index') }}">Atras</a>

    <a href="{{ path('residencias_edit', {'idResidencia': residencia.idResidencia}) }}">Editar</a>

    {{ include('residencias/_delete_form.html.twig') }}
{% endblock %}
