    <h1>Cambiar forma de pago</h1>
    {% else  %}
        <h1>Tu usuario no tiene acceso a esta pagina.</h1>
    {% endif %}
{% endblock %}


{% block body %}
{% if is_granted('IS_AUTHENTICATED_FULLY') %}

   <h1 align="center">Ingresa los datos que queres modificar:</h1>
<div align="center" style="width:25%" class="container">
    </br></br>
    
        {{ form_start(form) }}
        {{ form_widget(form) }}
        {{ form_end(form) }}

        <a href="{{ path('miPerfil') }}" class="btn btn-danger">Cancelar</a>

        </div>
{% else %}
    <div align="center" class="container">
        </br></br> </br></br></br>
        <p>No ha iniciado sesión</p>
        <a href="/inicio" class="btn btn-info">Iniciar sesión</a>
    </div>
{% endif %}
{% endblock %}