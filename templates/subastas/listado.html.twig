{% extends 'base.html.twig' %}

{% block title %}Subastas:{% endblock %}

{% block body %}

{% if is_granted('IS_AUTHENTICATED_FULLY') %}
    <div class="container">
    <h1>Subastas:</h1>
    {% if subastas %}
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Subasta</th>
                    <th>Residencia</th>
                    <th>Precio actual</th>
                    <th>Estado</th>
                    <th>Fecha de reserva</th>
                </tr>
            </thead>
            <tbody>
                {% for subasta in subastas %}
                    <tr>
                        <td>{{ subasta.getIdSubasta() }}</td>
                        <td>{{ (subasta.getIdResidencia()).getIdResidencia() }}</td>
                        <td>{{ subasta.getPrecioActual() }}</td>
                        {% if (subasta.getFinalizada() == 1) %}
                                    <td>{{ "Finalizada" }}</td>
                        {% else %}
                            <td>{{ "Activa" }}</td>
                        {% endif %}
                        {% set stringValue = subasta.getFechaInicio().format('Y-m-d') %}
                        <td>
                            {{ stringValue }}
                        </td>
                        <td>
                            <a href="/subasta/detalles{{ subasta.getIdSubasta() }}" class="btn btn-info">Detalles</a>
                        </td>
                        <td>
                            {# TODO #}
                            {% if (subasta.getFinalizada() != 1) %}
                                    <a href="/subasta/finalizar{{ subasta.getIdSubasta() }}" class="btn btn-danger">Finalizar subasta</a>
                            {% endif %}
                        </td>
                        <td>
                            {% if (subasta.getFinalizada() != 1) %}
                                    <a href="/subasta/participarDeLaSubasta{{ subasta.getIdSubasta() }}" class="btn btn-info">Participar</a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No hay subastas para mostrar</p>
    {% endif %}
    <a href="/subasta/new" class="btn btn-info">Crear subasta</a>
    <a href="/subasta/participando" class="btn btn-info">Ver subastas en las que participo</a>
    </div>
    


{% else %}
    <div align="center" class="container">
        <br/><br/>
        <h1>Inicie sesión.</h1>
        <br/>
        <a href="/inicio" class="btn btn-info">Iniciar sesión</a>
    </div>
{% endif %}
{% endblock %}