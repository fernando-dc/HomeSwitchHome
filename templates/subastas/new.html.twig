{% extends 'base.html.twig' %}

{% block styelsheets %}
    {{ parent() }}
{% endblock %}

{% block bodyTitle %}
    <h1>Nueva Subasta:</h1>
{% endblock %}


{% block body %}
{% if is_granted('IS_AUTHENTICATED_FULLY') %}

    {% form_theme subastaForm 'bootstrap_4_layout.html.twig' %}

    <div class="container">
        
        {{form_start(subastaForm)}}
        
        {{form_widget(subastaForm)}}
        
        <button type="submit" class="btn btn-success">Crear</button>
        <a href="{{ path('subastas_listado') }}" class="btn btn-danger">Cancelar</a>
    </div>

{% else %}
    <div align="center" class="container">
        </br></br> </br></br></br>
        <p>No ha iniciado sesión</p>
        <a href="/inicio" class="btn btn-info">Iniciar sesión</a>
    </div>
{% endif %}
{% endblock %}


{% block javascripts %}
    {{ parent()}}
    
    <script>
        jQuery(document).ready(function(){
            $('.js-datepicker-start').datepicker({
                weekStart: 1,
                startDate: "+25w",
                endDate: "+26w",
                daysOfWeekDisabled: "0,2,3,4,5,6",
                daysOfWeekHighlighted: "1",
                format: "yyyy/mm/dd",
            });
        });
    </script>


{% endblock %}